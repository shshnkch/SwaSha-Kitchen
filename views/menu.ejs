<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SwaSha Kitchen</title>
    <link rel="stylesheet" href="/styles/menu.css">
    <link rel="stylesheet" href="/styles/global.css">
    <script src="/scripts/darkmode.js" defer></script>
    <script src="/scripts/quantity.js"></script>
</head>
<body>
    <!-- Menu Page Container -->
    <div id="menu-page" class="menu-page">
        <!-- Menu Header -->
        <div id="menu-header" class="section-header">
            <h1>Menu</h1>
            <% if (typeof error !== 'undefined') { %> 
                <p class="error-message"><%= error %></p> 
            <% } %>
        </div>

        <!-- Menu by Category -->
        <div id="menu-by-category">
            <% 
            // Group menu items by category
            const categories = {};
            menuItems.forEach(item => {
                if (!categories[item.category]) {
                    categories[item.category] = [];
                }
                categories[item.category].push(item);
            });

            // Loop through each category
            Object.keys(categories).forEach(category => { 
            %>
                <div class="category-section">
                    <div class="category-header" onclick="toggleCategory(this)">
                        <%= category %>
                    </div>
                    <div class="category-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Price (in Rs.)</th>
                                    <th>Description</th>
                                    <th>Quantity</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories[category].forEach(item => { %>
                                    <% if(item.isActive) { %>
                                        <tr>
                                            <td>
                                                <% if(item.image) { %>
                                                    <img src="/uploads/<%= item.image %>" alt="<%= item.image %>" class="menu-item-image">
                                                <% } else { %>
                                                    No image available
                                                <% } %>
                                            </td>
                                            <td><%= item.name %></td>
                                            <td>â‚¹<%= item.price %></td>
                                            <td><%= item.description %></td>
                                            <td>
                                                <div class="quantity-control">
                                                    <button type="button" onclick="updateQuantity(this, -1)">-</button>
                                                    <input type="text" class="quantity-input" value="1" readonly>
                                                    <button type="button" onclick="updateQuantity(this, 1)">+</button>
                                                </div>
                                            </td>
                                            <td>
                                                <form action="/cart/add/<%= item._id %>" method="POST" onsubmit="return validateAndLog(this)">
                                                    <input type="hidden" name="menuItemId" value="<%= item._id %>">
                                                    <input type="hidden" name="quantity" class="hidden-quantity-input" value="1">
                                                    <button type="submit">Add to Cart</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }); %>
        </div>

        <div id="view-cart" class="view-cart">
            <h3><a href="/cart">View Cart</a></h3>
        </div>
    </div>

    <script>
        
    </script>
</body>
</html>