<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/styles/closedordersadmin.css">
    <link rel="stylesheet" href="/styles/global.css">
    <script src="/scripts/darkmode.js" defer></script>
</head>
<body>
    <!-- Closed Orders Admin Page Container -->
    <div id="closed-orders-admin-page" class="closed-orders-admin-page">
        <!-- Closed Orders Header -->
        <div id="closed-orders-header" class="section-header">
            <h1>Closed Orders - Admin Panel</h1>
        </div>

        <!-- Closed Orders Table -->
        <div id="closed-orders-table" class="closed-orders-table">
            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Delivery Address</th>
                        <th>User</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% closedOrders.forEach(order => { %>
                        <tr class="order-row">
                            <td class="order-id"><%= order._id %></td>
                            <td class="order-date"><%= order.createdAt.toLocaleString() %></td>
                            <td class="order-items">
                                <ul class="items-list">
                                    <% order.cartItems.forEach(item => { %>
                                        <li class="item">
                                            <%= item.menuItem.name %> - ₹<%= item.menuItem.price %> x <%= item.quantity %>
                                        </li>
                                    <% }) %>
                                </ul>
                            </td>
                            <td class="order-total">₹<%= order.total %></td>
                            <td class="order-address"><%= order.address %></td>
                            <td class="order-user">
                                <%= order.user.name %> (<%= order.user.email %>)
                            </td>
                            <td class="order-status status-<%= order.status.toLowerCase().replace(/ /g, '-') %>">
                                <%= order.status %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>